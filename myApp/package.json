{
  "name": "snake-bite-by-soonjin",
  "version": "1.0.0",
  "description": "영어 교육용 스네이크 게임 - Snake Bite by SOONJIN",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "SOONJIN",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.soonjin.snakebite",
    "productName": "Snake Bite by SOONJIN",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**"
    ],
    "mac": {
      "category": "public.app-category.educational-games",
      "icon": "icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "icon.png",
      "target": ["AppImage", "deb"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

